<h2>
<span id="vote_score">
Score: <%= @story.votes.size %>
</span>
<%= @story.name %>
</h2>
<p>
<%= link_to @story.desc, @story.desc %>
</p>
<div id="vote_form">
<%= form_tag story_votes_path(@story), :remote => true do %>
<%= submit_tag 'shove it' %>
<% end %>
</div>
<ul id="vote_history">
<% if @story.votes.empty? %>
<em>No shoves yet!</em>
<% else %>
<%= render :partial => 'votes/vote',
:collection => @story.votes.latest %>
<% end %>
</ul>

